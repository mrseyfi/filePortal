CREATE DATABASE FilePortal
ON
PRIMARY ( NAME = FilePortal,
    FILENAME = 'E:\SQLDATA\MDF\FilePortal.mdf'),
FILEGROUP FilePortalGroup CONTAINS FILESTREAM( NAME = Files,
    FILENAME = 'E:\SQLDATA\Files\FilePortal')
LOG ON  ( NAME = FilePortallog,
    FILENAME = 'E:\SQLDATA\LDF\FilePortallog.ldf')
GO



CREATE TABLE Files
(
  fId INT IDENTITY PRIMARY KEY,
  fData VARBINARY(MAX) FILESTREAM  NULL,
  fName NVARCHAR(300),
  RowGuid UNIQUEIDENTIFIER  NOT NULL  ROWGUIDCOL UNIQUE DEFAULT NEWID()
)
